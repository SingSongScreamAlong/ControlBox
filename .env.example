# ControlBox Environment Configuration
# Copy this file to .env and update values

# Server
NODE_ENV=development
PORT=3001
HOST=localhost

# Database
DATABASE_URL=postgresql://controlbox:controlbox_dev@localhost:5432/controlbox
DATABASE_POOL_SIZE=10

# Redis
REDIS_URL=redis://localhost:6379

# JWT (generate a secure secret for production)
JWT_SECRET=controlbox_dev_secret_change_in_production
JWT_EXPIRES_IN=24h

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# OpenAI Configuration (GPT-5 Flagship Model)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-5

# iRacing Relay
IRACING_RELAY_HOST=localhost
IRACING_RELAY_PORT=3002

# Logging
LOG_LEVEL=debug
LOG_FORMAT=pretty
